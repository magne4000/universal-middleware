{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "includes": [
      "**",
      "!**/dist/",
      "!**/package.json",
      "!**/.release-please-manifest.json",
      "!**/.vercel/",
      "!**/packages/sirv/tests/public/"
    ]
  },
  "formatter": {
    "indentWidth": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "lineWidth": 120
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git"
  },
  "overrides": [
    {
      "includes": [
        "**/packages/core/src/pipe.ts",
        "**/packages/adapter-express/src/response.ts",
        "**/packages/core/src/types.ts",
        "**/*.test.ts",
        "**/*.test-d.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": {
              "level": "off"
            }
          }
        }
      }
    }
  ]
}
