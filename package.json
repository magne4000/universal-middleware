{
  "name": "universal-middleware-workspace",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "type": "module",
  "scripts": {
    "play:express": "tsx ./playground/express-entry.ts",
    "play:h3": "tsx ./playground/h3-entry.ts",
    "play:hono": "vite --mode hono",
    "play:hattip": "hattip serve ./playground/hattip-entry.ts --client",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "build": "turbo build",
    "test": "turbo test",
    "test:typecheck": "turbo test:typecheck",
    "release": "turbo release --ui tui --env-mode loose --concurrency 1",
    "release:minor": "turbo release:minor --only --env-mode loose --concurrency 1",
    "release:commit": "turbo release:commit --ui tui --env-mode loose --concurrency 1"
  },
  "keywords": [],
  "author": "",
  "devDependencies": {
    "@hattip/compose": "^0.0.47",
    "@hattip/vite": "^0.0.47",
    "@hono/vite-dev-server": "^0.14.0",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node": "^18.19.14",
    "@types/serve-static": "^1.15.7",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "express-rate-limit": "^7.4.0",
    "express-session": "^1.18.0",
    "microdiff": "^1.4.0",
    "on-change": "^5.0.1",
    "playwright": "^1.46.1",
    "prettier": "^3.3.2",
    "proxy-deep": "^4.0.1",
    "rfdc": "^1.4.1",
    "turbo": "^2.0.14",
    "typescript": "^5.5.4"
  },
  "dependencies": {
    "@hattip/adapter-node": "^0.0.47",
    "@hattip/core": "^0.0.47",
    "@hattip/polyfills": "^0.0.47",
    "@hattip/router": "^0.0.47",
    "@hono/node-server": "^1.12.0",
    "express": "^4.19.2",
    "h3": "~1.12.0",
    "hattip": "^0.0.33",
    "helmet": "^7.1.0",
    "hono": "^4.5.6",
    "serve-static": "^1.15.0",
    "tsx": "^4.17.0",
    "vite": "^5.4.1"
  },
  "pnpm": {
    "overrides": {
      "@universal-middleware/core": "link:./packages/core",
      "@universal-middleware/express": "link:./packages/adapter-express",
      "@universal-middleware/hono": "link:./packages/adapter-hono",
      "@universal-middleware/hattip": "link:./packages/adapter-hattip",
      "@universal-middleware/webroute": "link:./packages/adapter-webroute",
      "@universal-middleware/fastify": "link:./packages/adapter-fastify",
      "universal-middleware": "link:./packages/universal-middleware",
      "@webroute/middleware": "^0.9.0",
      "esbuild": "^0.23.1"
    }
  },
  "packageManager": "pnpm@9.4.0"
}
